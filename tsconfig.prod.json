{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"target": "es6",
		"noImplicitAny": true,
		"preserveConstEnums": true,
		"declaration": false,
		"sourceMap": true,
		"types": ["node"],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/*.ts", "src/**/*.ts"],
	"exclude": ["node_modules", "src/**/*.spec.ts"]
}
